<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/relativeLayout">
    <TextView
            android:text="Piensa una pregunta y Presiona el boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/phraseTextView"
            android:textStyle="bold" android:textAlignment="center" android:textSize="20sp" android:padding="8dp"
            tools:layout_editor_absoluteY="327dp" android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
    <Button
            android:text="PRESIONAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressMeBotton"
            tools:layout_editor_absoluteY="690dp" tools:layout_editor_absoluteX="162dp"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
            android:textColor="@android:color/background_light" android:textAlignment="center"
            android:textStyle="bold" android:background="@android:color/holo_blue_dark"/>
</RelativeLayout>